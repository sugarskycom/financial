<form action="__URL__/<neq name='Think.get.article_id' value=''>edit<else/>add</neq>" method="post" id="form" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">文章分类：</label>
        <div class="col-sm-2">
            <select class="form-control" id="cat_id" name="cat_id">
                {$selects}
            </select>
        </div>
        <div class="col-sm-8"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">文章标题：</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" name="title" id="title" value="{$data.title}" />
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">文章编辑：</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" name="author" id="author" value="<neq name='data.author' value=''>{$data.author}<else/>{$Think.session.username}</neq>" placeholder="" />
        </div>
        <div class="col-sm-8"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">文章摘要：</label>
        <div class="col-sm-7">
            <textarea rows="3" name="description" id="description" class="form-control">{$data.description}</textarea>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">文章内容：</label>
        <div class="col-sm-7">
            <script id="content" type="text/plain" style="width:100%;height:300px;">{$data.content}</script>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">SEO关键词：</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" name="keywords" id="keywords" value="{$data.keywords}" placeholder="多个关键词用英文逗号','隔开，不可以重复" />
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">外部链接：</label>
        <div class="col-sm-7">
            <input type="url" class="form-control" name="link" id="link" value="{$data.link}" placeholder="当文章是引用外部网站才填写" />
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">访问地址：</label>
        <div class="col-sm-7">
            <input type="url" class="form-control" name="url" id="url" value="{$data.url}" placeholder="文章访问地址一般自动生成，无需填写" />
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">排序：</label>
        <div class="col-sm-2">
            <input type="number" class="form-control" name="sort_order" id="sort_order" value="{$data.sort_order}" value="0" />
        </div>
        <div class="col-sm-8"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">是否开启：</label>
        <div class="col-sm-4">
            <div class="checkbox"><input type="checkbox" name="is_show" id="is_show" <eq name="data.is_show" value="1">checked</eq> value="1"><label for="is_show">是</label></div>
        </div>
        <div class="col-sm-4"></div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-3">
            <button type="submit" class="btn btn-primary" id="btnBase" data-id="">保存文章</button>
        </div>
    </div>
    <neq name="Think.get.article_id" value='0'>
        <input type="hidden" value="{$data.article_id}" name="article_id" />
    </neq>
</form>
