<extend name="Public:base" />
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                    <div class="ibox-title">
                        <table class="table table-striped table-hover" 
                            id="loan"
                            data-toggle="table"
                            data-url="__ACTION__"
                            data-query-params="loanQureyParams"
                            data-pagination="true"
                            data-side-pagination="server"
                            data-page-list="[5,10,20,30]"
                            data-method="post"
                            data-page-size="10"
                            data-cache="false"
                            data-sort-order="desc"
                            data-sort-name="id"
                            data-content-type="application/x-www-form-urlencoded; charset=UTF-8"
                            >
                            <thead>
                                <tr>
                                    <th data-field="title">标题</th>
                                    <th data-field="bno">借款唯一号</th>
                                    <th data-field="amount" data-formatter="formatCny">贷款金额（元）</th>
                                    <th data-field="pay_amount" data-formatter="formatCny">放款金额（元）</th>
                                    <th data-field="end_time" data-formatter="formatTime">放款时间</th>
                                    <th data-field="year_rate" data-formatter="formatRate">基础年化利率</th>
                                    <th data-field="duration" data-formatter="formatIssue">期限</th>
                                    <th data-field="pay_type" data-formatter="loanPaytypeFormat">还款方式</th>
                                    <th data-field="is_pledge" data-formatter="loanIspledgeFormat">有无抵押</th>
                                    <th data-field="status_text">借款状态</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>  
</block>
<block name="js">
<include file="Public:bootstrap-table" />
<script type="text/javascript">
function loanQureyParams(params) {
    params.uid = {$Think.get.uid};
    return params;
}
function loanPaytypeFormat(value,row,index) {
    var str = '-';
    switch (value) {
        case '1': str = '按月付息到期还本'; break;
        case '2': str = '一次性还本付息'; break;
    }
    return str;
}
function loanIspledgeFormat(value,row,index) {
    return value == '0' ? '无' : '有' ;
}
</script>
</block>
<block name="buttons">
<include file="topmenu"/>
</block>        