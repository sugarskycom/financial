<table class="table table-striped">
	<thead>
		<tr>
			<th>类型</th>
			<th>还款金额</th>
			<th>备注</th>
			<th>操作人</th>
			<th>操作时间</th>
		</tr>
	</thead>
	<tbody>
		<volist name="list" id="r">
			<tr>
				<td>
					<switch name="r.flag">
						<case value="1">逾期违约金</case>
						<case value="2">逾期管理费</case>
						<case value="3">逾期罚息</case>
						<case value="4">借款管理费</case>
						<case value="5">利息</case>
						<case value="6">本金</case>
					</switch>
				</td>
				<td>{$r.amount|number_format=2}</td>
				<td>{$r.remark}</td>
				<td>{$r.operator}</td>
				<td>{$r.operate_time|date='Y-m-d H:i',###}</td>
			</tr>
		</volist>
	</tbody>
</table>