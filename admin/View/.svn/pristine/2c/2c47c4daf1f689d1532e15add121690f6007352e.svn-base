<div class="row">
	<div class="col-lg-12">
		<div class="alert alert-warning text-center">注意：图片最佳尺寸大小应为：600px * 300px,格式只支持jpg、jpeg</div>
		<form action="javascript:;" method="post" id="stockForm" class="form-horizontal">
			<input type="file" name="upload" id="upload">
		</form>
	</div>
</div>
<script type="text/javascript">
	$(function(){
		//设置上传控件
		$("#upload").fileinput({
			language:"zh",
			showUpload:true,
			showPreview:true,
			uploadUrl:"__URL__/upload?article_id={$article_id}",
			allowedFileExtensions : ['jpg', 'jpeg'],
		});
	})
</script>