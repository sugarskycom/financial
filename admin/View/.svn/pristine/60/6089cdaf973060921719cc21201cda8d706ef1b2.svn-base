<extend name="Public:temp" />
<block name="content">
<div class="ibox">
<div class="ibox-content">
<include file="form" />
</div>
</div>
</block>
<block name="css">
<link href="{$Think.config.RESOURCE_URL}/components/summernote/dist/summernote.css" rel="stylesheet">
</block>
<block name="js">
<script type="text/javascript" src="{$Think.config.RESOURCE_URL}/components/summernote/dist/summernote.min.js"></script>
<script type="text/javascript" src="{$Think.config.RESOURCE_URL}/components/summernote/dist/lang/summernote-zh-CN.min.js"></script>
<script type="text/javascript">
$(function(){
	$("#content").summernote({
		height:400,
		lang:'zh-CN',
		fontNames: ['宋体','微软雅黑','Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
		toolbar: [
			['view', ['fullscreen'],['codeview']],
		    ['style', ['bold', 'italic', 'underline', 'clear']],
		    ['fontname', ['fontname']],
		    ['font', ['strikethrough', 'superscript', 'subscript']],
		    ['fontsize', ['fontsize']],
		    ['color', ['color']],
		    ['para', ['ul', 'ol', 'paragraph']],
		    ['height', ['height']]
  		]
	});

	$("#btn").click(function(){
		var title = $.trim($("#title").val());
		var content = $("#content").summernote('code');
		if(title==''){
			alt('合同不能为空');
			return false;
		}
		else{
			return true;
		}
		return false;
	});
});
</script>
</block>