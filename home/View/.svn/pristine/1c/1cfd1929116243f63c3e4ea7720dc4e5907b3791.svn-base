<block name="js">
	<script type="text/javascript" src="{$Think.config.RESOURCE_URL}/components/validate/jquery.validate.min.js"></script>
	<script type="text/javascript">
	//鼠标滑过状态
	$(function(){
		$(".pro-content .project-box").mouseover(function(){
			$(this).find(".btn-apply").css({
				"background-color":"#fdc230",
				"color":"#fff"				
			});
		});
		$(".pro-content .project-box").mouseout(function(){
			$(this).find(".btn-apply").css({
				"background-color":"#fff",
				"color":"#fdc230"
			});
		});

		$(".flow-box").mouseover(function(){
		    console.log($(this)[0]);
			$(this).find(".flow-title").hide();
			$(this).find(".flow-desc").show();
		});
		$(".flow-box").mouseover(function(){
			$(this).find(".flow-desc").hide();
			$(this).find(".flow-title").show();
		});		
	});


	$(function(){
		$("#loanForm").validate({
			rules:{
				name:{
					required:true,
					minlength:2
				},
				address:{
					required:true
				},					
				mobile:{
					required:true,
					isValidMobile:true
				},
				sum:{
					required:true					
				},	
				purpose:{
					required:true
				}				
			},
			messages:{
				name:{
					required:"用户名不能为空",
					minlength:"用户名至少2个字符",
				},
				address:{
					required:"常住地址不能为空"
				},
				mobile:{
					required:"手机号不能为空",
					isValidMobile:"手机号格式无效"
				},
				sum:{
					required:"借款额度不能为空"
				},
				purpose:{
					required:"借款用途不能为空"
				}
			},

			submitHandler: function (form) {

				$("#btnSubmit").attr("disabled", true).text("提交中···");
				$.ajax({
					url: " ",
					data: {
						name: $("#name").val().trim(), 
						address: $("#address").val().trim(),
						mobile: $("#mobile").val().trim(),
						sum: $("#sum").val().trim(),
						purpuse: $("#purpuse").val().trim()						
					},
					type: "post",
					success: function (ret) {
						if (ret.status == 1) {
							$("#btnSubmit").text("提交成功，跳转中...");
							var url = "跳转页面";
							if (backUrl != "") url = backUrl;
							setTimeout(function () {
								window.location.href = url;
							}, 1000);
						}
						else {
							$("#btnSubmit").text("错误提示");
							setTimeout(function () {
								window.location.reload ();
							}, 1000);								
						}
					}
				})
			}
		})

			// 手机号码验证
			$.validator.addMethod("isValidMobile",function(value,element,params){

				var reg = /^0?1[3|4|5|7|8][0-9]\d{8}$/;

				if(!reg.test(value)){

					return false;

				}

				else{

					return true;

				}

			});
		})


	</script>
