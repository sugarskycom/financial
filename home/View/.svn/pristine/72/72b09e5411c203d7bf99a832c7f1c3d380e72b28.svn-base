    position: relative;
    margin-right: 10px;
    border: 1px solid #ddd;
    padding: 0 10px;
    line-height: 30px;
    height: 30px;
    overflow: visible;
    cursor: pointer;
}
.current {background-color: #3f80e8;}

.advise-form textarea {
    width: 621px;
    padding: 5px;
    margin-top: 5px;
    border: 1px solid #ddd;
}
.advise-form .input {
    border: 1px solid #ddd;
    width: 225px;
    height: 30px;
    padding-left: 5px;
}

    </style>
