<form class="feedback-form" method="" action="#" id="feedbackForm" novalidate="novalidate">
    <div class="form-group">
        <label class="feedback-label mt20 mb20" for="feedbackType">一、投诉类型：</label>
        <ul class="feedback-types list-inline" id="feedbackType">
            <li value="1">信息披露</li>
            <li value="2">投诉客服</li>
            <li value="3">回款问题</li>
            <li value="4">出借问题</li>
            <li class="curre" value="5">意见建议</li>
            <li value="6">其他投诉</li>
        </ul>
    </div>
    <div class="form-group">
        <label class="feedback-label" style="display: block;" for="remarks">二、投诉内容描述：</label>
        <textarea name="remarks" id="remarks" class="remarks" rows="8" placeholder="必填" maxlength="1000"></textarea>
    </div>
    <div class="form-group">
        <label class="feedback-label">三、请填写您的联系方式：</label>
    </div>
    <div class="form-group">
        <label class="feedback-label" for="feedbackname">姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 名：</label>
        <input type="text" placeholder="必填" id="feedbackname" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label class="feedback-label" for="feedbackmobile">联系方式：</label>
        <input type="text" placeholder="必填" id="feedbackmobile" name="mobile" class="form-control">
    </div>
    <div class="form-group mb20">
        <p class="notice">以上投诉只限于注册用户，含未充值用户。</p>
        <button type="submit" class="btn btn-primary btn-submit mb20" id="feedbackSubmit">提交</button>
    </div>
</form>

<style>
        body.modal-open{
            overflow: scroll;
        }
        .modal-open .modal{
            overflow: hidden;
        }
        .mt20 {margin-top:20px;}
        .mb20 {margin-bottom: 20px;}
        label {margin-right: 10px;}
        .feedback-form .feedback-types li {
            position: relative;
            margin-right: 5px;
            border: 1px solid #ddd;
            padding: 0 10px;
            line-height: 30px;
            height: 30px;
            overflow: visible;
            cursor: pointer;
        }
        .curre {background-color: #ccc;}

        .feedback-form textarea {
            width: 510px;
            padding: 5px;
            margin-top: 5px;
            border: 1px solid #ddd;
        }
        .feedback-form .input {
            border: 1px solid #ddd;
            width: 225px;
            height: 30px;
            padding-left: 5px;
        }
        .form-control {
            display: inline-block;
            width: 30%;
        }

        .btn-primary {
          color: #fff;
          background-color: #fdc230;
          border-color: 0;
          outline: 0 !important;
        }
        .btn-primary:hover,
        .btn-primary:focus,
        .btn-primary.focus,
        .btn-primary:active,
        .btn-primary.active,
        .open > .dropdown-toggle.btn-primary {
            color: #fff;
            background-color: #fdc230;
            border-color: 0 !important;
        }
</style>

<script>
        $(".feedback-types li").click(function () {
            $(this).addClass("curre");
            $(this).siblings().removeClass("curre");
        });

        $(function(){
            $("#feedbackForm").validate({
                rules:{
                    feedbackType:{
                        required:true
                    },
                    remarks:{
                        required:true
                    },
                    name:{
                        required:true,
                        minlength:2
                    },                  
                    mobile:{
                        required:true,
                        isValidMobile:true
                    }             
                },
                messages:{
                    feedbackType:{
                        required:"投诉类型不能为空"
                    },
                    remarks:{
                        required:"请填写投诉内容"
                    },
                    name:{
                        required:"用户名不能为空",
                        minlength:"用户名至少2个字符"
                    },
                    mobile:{
                        required:"手机号不能为空",
                        isValidMobile:"手机号格式无效"
                    }
                },

                submitHandler: function (form) {

                    $("#feedbackSubmit").attr("disabled", true).text("提交中···");
                    $.ajax({
                        url: "/Help/getFeedback",
                        data: {
                            feedbackType: $("li.curre").val(), 
                            remarks: $("#remarks").val().trim(), 
                            name: $("#feedbackname").val().trim(),
                            mobile: $("#feedbackmobile").val().trim()
                        },
                        type: "post",
                        success: function (ret) {
                            if (ret.status == 1) {
                                $("#feedbackSubmit").text("提交成功，跳转中...");
                                BootstrapDialog.alert({
                                    type: BootstrapDialog.TYPE_DEFAULT,
                                    title: "提示",
                                    message: ret.message,
                                    callback: function () {
                                        window.location.reload();
                                    },
                                    buttonLabel: '确定'
                                });
                            }
                            else {
                                $("#feedbackSubmit").text("提交信息错误，请稍后再试！");
                                setTimeout(function () {
                                    window.location.reload ();
                                }, 1000);
                            }
                        }
                    })
                }
            })

            // 手机号码验证
            $.validator.addMethod("isValidMobile",function(value,element,params){

                var reg = /^0?1[3|4|5|7|8][0-9]\d{8}$/;

                if(!reg.test(value)){

                    return false;

                }

                else{

                    return true;

                }

            });
        })
</script>