<block name="js">
    <script>
        $(document).ready(function() {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });
            var token = '{$token}';
            $("#form").validate({
                onkeyup: false,
                rules: {
                    username: {
                        required: true,
                        minlength: 5,
                        isValidUser: true,
                        isExistsUser: true
                    },
                    mobile: {
                        required: true,
                        isValidMobile: true,
                        isExistsMobile: true
                    },
                    password: {
                        required: true,
                        minlength: 6
                    },
                    repassword: {
                        required: true,
                        equalTo: "#password"
                    },
                    smscode: {
                        required: true,
                        checkSmsCode: true
                    }
                },
                messages: {
                    username: {
                        required: "用户名不能为空",
                        minlength: "用户名至少5个字符",
                        isValidUser: "用户名只能以字母开头，字母、数字或下划线组成",
                        isExistsUser: "该用户名已存在不可注册"
                    },
                    mobile: {
                        required: "手机号不能为空",
                        isValidMobile: "手机号格式无效",
                        isExistsMobile: "该手机号已存在不可注册"
                    },
                    password: {
                        required: "密码不能为空",
                        minlength: "密码至少6个字符"
                    },
                    repassword: {
                        required: "再次输入密码",
                        equalTo: "两次密码不一致"
                    },
                    smscode: {
                        required: "短信验证码不能为空",
                        checkSmsCode: "验证码不正确或已过期"
                    }
                },
                errorPlacement: function(error, element, params) {
                    if (element.attr('name') == "accept") {
                        error.appendTo($(".main-msg"));
                    } else if (element.attr('name') == 'mobile') {
                        error.appendTo(element.parent('div'));
                    } else {
                        error.appendTo(element.parent("div"));
                    }

                },
                submitHandler: function(form) {
                    var v = $("input[name=accept]:checked").size();
                    if (v == 0) {
                        BootstrapDialog.alert({
                            type: BootstrapDialog.TYPE_DEFAULT,
                            title: "温馨提示",
                            message: "您是否阅读并同意汇通资产平台用户服务协议?",
                            buttonLabel: "确定"
                        });
                        return false;
                    } else {
                        var obj = new Object();
                        obj.username = $.trim($("#username").val());
                        obj.password = $.trim($("#password").val());
                        obj.repassword = $.trim($("#repassword").val());
                        obj.mobile = $.trim($("#mobile").val());
                        obj.smscode = $.trim($("#smscode").val());
                        $.ajax({
                            url: "__ACTION__",
                            data: obj,
                            type: "post",
                            success: function(ret) {
                                if (ret.status == 1) {
                                    alt(ret.data, function() {
                                //window.location.href = $("#backurl").val();
                                window.location.href = "/Account/verifyrealname"
                            })
                                } else {
                                    BootstrapDialog.alert({
                                        type: BootstrapDialog.TYPE_DEFAULT,
                                        title: "温馨提示",
                                        message: ret.error,
                                        buttonLabel: "确定"
                                    });
                                }
                            }
                        });
                    }
                    return false;
                }
            });
$.validator.addMethod("isValidMobile", function(value, element, params) {
    var reg = /^0?1[3|4|5|7|8][0-9]\d{8}$/;
    if (!reg.test(value)) {
        return false;
    } else {
        return true;
    }
});
$.validator.addMethod("isValidUser", function(value, element, params) {
    var reg = /^[a-zA-Z][a-zA-Z0-9_]{4,12}$/;
    if (reg.test(value))
        return true;
    else
        return false;
});
$.validator.addMethod("isExistsUser", function(value, element, params) {
    var v = $.ajax({
        url: "__URL__/account",
        type: "post",
        data: {
            flag: "user",
            value: value
        },
        async: false
    }).responseText;
    if (v == '1')
        return true;
    else
        return false;
});
$.validator.addMethod("isExistsMobile", function(value, element, params) {
    var v = $.ajax({
        url: "__URL__/account",
        type: "post",
        data: {
            flag: "mobile",
            value: value
        },
        async: false
    }).responseText;
    if (v == "1")
        return true;
    else
        return false;
});
$.validator.addMethod("checkSmsCode", function(value, element, params) {
    var v = $.ajax({
        url: "__URL__/captcha",
        type: "post",
        data: {
            code: value
        },
        async: false
    }).responseText;
    if (v == "1")
        return true;
    else
        return false;
});

$("#getCode").click(function() {
    var v = $.trim($("#mobile").val());
    var reg = /^0?1[3|4|5|7|8][0-9]\d{8}$/;
    if (v == "") {
        return false;
    } else if (!reg.test(v)) {
        BootstrapDialog.alert({
            type: BootstrapDialog.TYPE_DEFAULT,
            title: "温馨提示",
            message: "请检查手机号是否有问题",
            buttonLabel: "确定"
        });
    } else {
        $("#getCode").attr('disabled', true);
        $.ajax({
            url: "__URL__/sendsms",
            data: {
                flag: '{$token}',
                mobile: $("#mobile").val().trim()
            },
            type: "post",
            success: function(ret) {
                if (ret == '1') {
                    setJs();
                }
            }
        });
    }
});
