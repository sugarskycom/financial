<extend name="Public:theme" />
<block name="content">
    <include file="Public:top"/>
    <div class="loginColumns animated fadeInDown">
        <div class="ibox-content">
            <div class="row" style="margin-bottom: 24px;">
                <div class="col-md-6" style="font-size: 18px;color: #4c4c4c;">登录账号</div>
                <div class="col-md-6">
                    <p class="text-muted text-center">
                        <small>还没有账号?</small><a href="{:U('Register/index')}" class="pull-right">创建账号</a>
                    </p>
                </div>
            </div>
            <form class="m-t" role="form" action="javascript:;" method="post" id="form">
                        <div class="form-group">
                            <input type="text" class="form-control inputfirst" placeholder="用户名/邮箱/手机号"  name="username" id="username">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control inputfirst" placeholder="密码"  name="password" id="password">
                        </div>
                        <div class="form-group clearfix">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control inputfirst" placeholder="验证码"  name="code" id="code">
                                </div>
                                <div class="col-md-6">
                                    <a href="javascript:;" title="更换验证码" style="width: 140px;height: 40px;">
                                        <img src="{:U('Verify/load')}" onclick="this.src='{:U('Verify/load')}/?rnd='+Math.random()">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary block full-width m-b" id="btn">登录</button>
                        <a href="{:U('Forget/index')}" class="pull-right" style="margin-top: -12px;display:block" >
                            <small>忘记密码?</small>
                        </a>
                        <input type="hidden" name="backurl" id="backurl" value="{$backurl}">
                    </form>
        </div>
 </div>
    <include file="Public:footer"/>
</block>
<block name="css">
    <style>
        .loginColumns{
            background: url("/Public/images/login/login-bg.png") no-repeat 100% 100%;
            position: relative;
            height: 556px;
            box-sizing: border-box;
            margin-bottom: -30px;
        }
        .ibox-content{
            width: 410px;
            min-height: 420px;
            position: absolute;
            left: 55%;
            padding-left: 50px;
            padding-right: 50px;
            padding-top: 60px;
        }
        .loginColumns{
            max-width: 1920px;
        }
        .form-group .form-control{
            width: 310px;
            height: 40px;
            border-radius: 4px;
        }
        #code{
            width: 150px;
        }
        #btn{
            font-size: 16px;
            color: #ffffff;
            width: 310px;
            height: 40px;
            border-radius: 4px;
            margin-top: 30px;
            background-color: #fdc230;
            border-color: #fdc230;
        }
        .form-group{
            margin-bottom: 24px;
        }
/*      main.min.css导致input样式覆盖不了
        .form-group .form-control.inputfirst:focus {
            border-color: ;
        }*/
        .loginColumns {
            padding-top: 50px;
        }
    </style>
</block>
<block name="js">
    <script type="text/javascript">
        var token = '{$token}';
        $(function(){
        $("#form").validate({
                onkeyup:false,
                rules: {
                    username:{
                        required:true,
                        minlength:5,
                    },
                    password:{
                        required:true,
                        minlength:6,
                    },
                    code:{
                        required:true,
                    }
                },
                messages:{
                    username:{
                        required:'用户名不能为空',
                        minlength:'用户名至少5位',
                    },
                    password:{
                        required:'密码不能为空',
                        minlength:'密码至少6位',
                    },
                    code:{
                        required:'验证码不能为空',
                    }
                },
                errorPlacement: function (error, element, params) {
                     error.appendTo(element.parent('div'));
                },
                submitHandler: function (form) {
                    $("#btn").prop('disabled',true);
                    var obj = {};
                    obj.username = $.trim($("#username").val());
                    obj.password = $.trim($("#password").val());
                    obj.code = $.trim($("#code").val());
                    obj.token = token;
                    $.post("__ACTION__",obj,function(ret){
                        if(ret.status==0){
                            alt(ret.error,function(){
                                $("#btn").prop('disabled',false);
                            });
                        }
                        else{
                            $("#btn").text(ret.data);
                            setTimeout(function(){
                                window.location.href = $("#backurl").val();
                            },500);
                        }
                    });
                    return false;
                }
            });
        })

        $(function () {
            $(".one-menu:eq(4)").addClass("active");
            $(".top-right .login").addClass("on");
        })
    </script>
</block>