<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>应还日期</th>
            <th>应还本金</th>
            <th>应还利息</th>
            <th>逾期罚息</th>
            <th>逾期管理费</th>
            <th>应还总额</th>
            <th>实还日期</th>
            <th>偿还状态</th>
        </tr>
    </thead>
    <tbody>
    <volist name="plan" id="p">
        <tr>
            <td>{$p.repay_time|date="Y-m-d",###}</td>
            <td>{$p.principal}</td>
            <td>{$p.interest}</td>
            <td>{$p.overdue_penalty}</td>
            <td>{$p.overdue_fees}</td>
            <td>{$p.repay_total}</td>
            <td><notempty name="p.pay_time">{$p.pay_time|date="Y-m-d H:i",###}<else />-</notempty></td>
            <td>{$p.repay_status}</td>
        </tr>
    </volist>
    </tbody>
</table>