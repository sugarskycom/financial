		}

		.info-public .info-list .info-item {
			background-color: #fff;
			height: 314px;
		}

		.info-public .info-list .info-list-notice {
			width: 34%;
		}
		.info-public .info-list>div:nth-child(2) {
			border-right: 0;
			border-left: 0;
			margin-left: 10px;
			margin-right: 10px;
		}
		.info-public .info-list .info-list-top {
			width: 30%;
		}
		.info-public .info-list .info-list-team {
			width: 34%;
		}
		.info-item h1 {
			font-size: 18px;
			font-weight: 500;
			color: #666;
			height: 58px;
			line-height: 58px;
			padding-left: 20px;
			margin-top: 0;
			margin-bottom: 0;
			position: relative;
			border-bottom: 1px solid #e5e5e5;
		}
		.info-item h1 > .more {
			font-size: 14px;
			color:#666;
			position: absolute;
			right: 20px;
		}
		.info-list .info-list-notice .list-notice-group {
			padding:20px 0 20px 20px;
